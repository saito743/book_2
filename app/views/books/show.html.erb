<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_image.jpg", size:'100x100' %>
    <table>
      <tbody>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <% if @user.id == current_user.id %>
      <%= link_to "編集", edit_user_path(@user) %>
    <% else %>
      <%= link_to "編集", user_path(current_user.id) %>
    <% end %>

<h1>New Book</h1>
<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_for(@books) do |f| %>
<p>Tttle</p>
  <%= f.text_field :title %>
<p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit"Create Book" %>
<% end %>


<h2>Book detail</h2>
  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="2"></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
	  <tr>
	  	<td>
        <%= link_to user_path(@user.id) do %>
        <% if @user.profile_image.present? %>
            <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50 %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: '40x40' %>
          <% end %>
          <br />
          <%= @book.user.name %>
        <% end %>
      </td>
	    <td><%= @book.title %></td>
	    <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}  %></td>
      <% end %>
	  </tr>
  </tbody>
</table>