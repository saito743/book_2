<h2>Book detail</h2>
  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Body</th>
        <th colspan="2"></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
	  <tr>
	  	<td>
        <%= link_to user_path(@user.id) do %>
          <%= @book.user.name %>
        <% end %>
      </td>
	    <td><%= @book.title %></td>
	    <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除しますか？"}  %></td>
      <% end %>
	  </tr>
  </tbody>
</table>