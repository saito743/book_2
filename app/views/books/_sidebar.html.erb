      <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, size:'100x100', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>

  <div class="row">
    <% if user.id == current_user.id %>
      <%= link_to "", edit_user_path(user),class:"btn btn-default col-xs-12 glyphicon glyphicon-wrench" %>
    <% else %>
      <%= link_to "", user_path(current_user),class:"btn btn-default col-xs-12 glyphicon glyphicon-wrench" %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <h2>New book</h2>
    </div>
  </div>
    <div class="field row">
      <%= form_for(book) do |f| %>
      <label>Title</label>
        <%= f.text_field :title, class:"col-xs-12" %>
    </div>
    <div class="field row">
      <label>Opinion</label>
        <%= f.text_area :body, class:"col-xs-12" %>
    </div>
    <div class="row">
        <%= f.submit"Create Book", data: {"turbolinks" => false}, class:"col-xs-12 btn btn-primary" %>
      <% end %>
    </div>

