<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
  	<% @books.each do |book| %>
	  <tr>
      <td><%= book.user.name %></td>
	    <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
	    <td><%= book.body %></td>
	  </tr>
	   <% end %>
  </tbody>
</table>