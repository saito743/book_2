  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/sidebar', user:@user, book:@book %>
    </div>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        	<% @books.each do |book| %>
      	  <tr class="user-show-table">
            <td>
              <% if book.user.profile_image.present? %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50 %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: '40x40' %>
              <% end %>
            </td>
      	    <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
      	    <td><%= book.body %></td>
      	  </tr>
      	   <% end %>
        </tbody>
      </table>
    </div>
</div>