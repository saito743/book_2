
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
	<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong></h2>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  </div>
<% end %>

	<%= form_for(@book) do |f| %>
	  <div class="field row">
		<label>Title</label>
		  <%= f.text_field :title, class:"col-xs-12" %>
	  </div>
	  <div class="field row">
		<label>Opinion</label>
		  <%= f.text_area :body,class:"col-xs-12" %>
	  </div>
	  <div class="field row">
		  <%= f.submit"Update Book",class:"btn btn-primary col-xs-12" %>
	  </div>
	<% end %>
	<%= link_to "Show", book_path(@book.id) %> |
	<%= link_to "Back", books_path %>
  </div>
</div>