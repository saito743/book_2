<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_image.jpg" %>
<table>
	<tbody>
		<tr>
			<th>name</th>
			<th><%= @user.name %></th>
		</tr>
		<tr>
			<th>introduction</th>
			<th><%= @user.introduction %></th>
		</tr>
	</tbody>
</table>
<% if @user.id == current_user.id %>
  <%= link_to "編集", edit_user_path(@user) %>
<% end %>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Option</th>
		</tr>
	</thead>
	<tbody>
	  <% @books.each do |book| %>
	  <tr>
        <td><%= book.user.name %></td>
	      <td>
            <%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %>
          </td>
	    <td><%= book.body %></td>
	  </tr>
	  <% end %>
  </tbody>
</table>