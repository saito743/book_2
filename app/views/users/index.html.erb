<h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, size:'100x100', fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </tbody>
</table>
<% if @user.id == current_user.id %>
  <%= link_to "編集", edit_user_path(@user) %>
<% end %>

<h1>Users</h1>
  <table>
  	<thead>
  		<tr>
  			<th>image</th>
  			<th>name</th>
  			<th colspan="3"></th>
  		</tr>
  	</thead>
  	<tbody>
      <% @users.each do |user| %>
  		<tr>
  			<td>
          <% if user.profile_image.present? %>
            <%= attachment_image_tag user, :profile_image, :fill, 50, 50 %>
          <% else %>
            <%= image_tag 'no_image.jpg', size: '40x40' %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user_path(user) %></td>
  		</tr>
      <% end %>
  	</tbody>
  </table>