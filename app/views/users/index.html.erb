<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'books/sidebar', user:@user, book:@book %>
    </div>

  <div class="col-xs-9">
    <h1>Users</h1>
      <table>
      	<thead>
      		<tr>
      			<th>image</th>
      			<th>name</th>
      			<th colspan="3"></th>
      		</tr>
      	</thead>
      	<tbody>
          <% @users.each do |user| %>
      		<tr>
      			<td>
              <% if user.profile_image.present? %>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50 %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: '40x40' %>
              <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to "Show",user_path(user) %></td>
      		</tr>
          <% end %>
      	</tbody>
      </table>
    </div>
  </div>
</div>