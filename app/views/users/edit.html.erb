<div class="container">
  <h2>User info</h2>
  <%= form_for(@user) do |f| %>
    <div class="field">
      <label for="user_name">Name</label>
        <%= f.text_field :name %><br />
    </div>
    <div class="field">
      <label for="user_profile_image">Image</label>
        <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
      <label for="user_name">Introduction</label>
        <%= f.text_area :introduction %><br/ >
    </div>
    <div class="action">
      <%= f.submit "Update User" %>
    </div>
  <% end %>
</div>