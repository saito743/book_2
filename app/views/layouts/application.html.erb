<!DOCTYPE html>
<html>
  <head>
    <title>Book2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
    <div class="container">
      <nav>
        <span class="header-title">Bookers</span>
      </nav>
      <nav>
        <ul class="header-list">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
              <span class="glyphicon glyphicon-home list-logo" aria-hidden="true">  Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user list-logo" aria-hidden="true"> Users</span>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book list-logo" aria-hidden="true"> Books</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete  do %>
              <span class="glyphicon glyphicon-log-out list-logo" aria-hidden="true"> logout</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home list-logo" aria-hidden="true"> Home</span>
              <% end %>
            </li>
            <li>
              <%= link_to about_home_path do %>
              <span class="glyphicon glyphicon-link list-logo" aria-hidden="true"> About</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_registration_path do %>
              <span class="glyphicon glyphicon-edit list-logo" aria-hidden="true"> sign up</span>
              <% end %>
            </li>
            <li>
              <%= link_to new_user_session_path do %>
              <span class="glyphicon glyphicon-log-in list-logo" aria-hidden="true"> login</span>
              <% end %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <div class="container">
    <p class="notice"><%= notice %><%= alert %></p>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><strong><%= @book.errors.count %>errors prohibited this *** from being saved:</strong></h2>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
              <li><% msg %></li>
            <% end %>
          </ul>
    <% end %>

    <%= yield %>
<div class="container">
  <footer>
    <div class="row">
      <p class="col-xs-3 col-xs-offset-9">CopyRight Infratop.inc</p>
    </div>
  </footer>
</div>
  </body>
</html>
