<!DOCTYPE html>
<html>
  <head>
    <title>Book2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
    <div class="container">
      <nav>
        <ul class="header-title">Bookers</ul>
      </nav>
      <nav>
        <ul class="header-list">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
              <a class="glyphicon glyphicon-home" aria-hidden="true">  Home</a>>
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <a class="glyphicon glyphicon-user" aria-hidden="true">  Users</a>>
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <a class="glyphicon glyphicon-book" aria-hidden="true">  Books</a>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete  do %>
              <span class="glyphicon glyphicon-log-out" aria-hidden="true">  logout</span>
              <% end %>
            </li>
          <% else %>
            <li>
              <span class="glyphicon glyphicon-home" aria-hidden="true">
              <%= link_to "Home",root_path, class:"list-item" %>
              </span>
            </li>
            <li>
              <span class="glyphicon glyphicon-link" aria-hidden="true">
              <%= link_to "About",about_home_path, class:"list-item" %>
              </span>
            </li>
            <li>
              <span class="glyphicon glyphicon-edit" aria-hidden="true">
              <%= link_to "sign up", new_user_registration_path, class:"list-item" %>
              </span>
            </li>
            <li>
              <span class="glyphicon glyphicon-log-in" aria-hidden="true">
              <%= link_to "login",new_user_session_path, class:"list-item" %>
              </span>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

    <%= yield %>

  <footer>
    <p>CopyRight Infratop.inc</p>
  </footer>
  </body>
</html>
